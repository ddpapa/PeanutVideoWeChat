/* pages/index/index.wxss */

@import "../../style/iconfont.wxss";
page {
    height: 100vh;
    overflow: hidden;
    background-color: white;
}

.page-bottom {
    width: 75vw;
    height: 100vh;
    position: fixed;
    z-index: 10;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.outer-container {
    width: 90%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.innter-top {
    width: 94%;
    align-self: center;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.personal {
    width: 100%;
    margin-bottom: 60rpx;
}

.personal.location {
    font-size: 25rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.personal.location>view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.personal.location>view>text {
    margin-left: 10rpx;
}

.personal.message {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.personal.message>image {
    height: 100rpx;
    display: block;
    border-radius: 50%;
}

.personal.message>view {
    width: 330rpx;
}

.nick {
    font-size: 30rpx;
    font-weight: 545;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.desc {
    font-size: 20rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #9c9c9c;
}

.personal.news {
    display: flex;
    flex-direction: row;
}

.personal.news>view {
    width: 33.3333%;
    display: flex;
    flex-direction: column;
}

.personal.news>view>view {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}

.personal.news>view>view>text {
    margin-top: 15rpx;
}

.personal.news :nth-child(1) {
    align-items: flex-start;
}

.personal.news :nth-child(2) {
    align-items: center;
}

.personal.news :nth-last-child(1) {
    align-items: flex-end;
}

.inner-bottom>view {
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    font-size: 25rpx;
}

.inner-bottom {
    width: 94%;
    align-self: center;
}

.inner-bottom>view>view {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.page-top {
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 20;
    /* 父元素必须设置透明 */
    background-color: white;
    transition: all 0.4s ease;
    -webkit-transition: all 0.4s ease;
}

.tabbar-left {
    width: 10vw;
    padding-left: 3vw;
    margin-bottom: 5rpx;
}

.tabbar-center {
    width: 50vw;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.tab-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: all 0.2s ease;
    -webkit-transition: all 0.2s ease;
    color: #6c6c6c;
    font-size: 35rpx;
}

.text-item {}

.slide-item {
    width: 30rpx;
    height: 8rpx;
    border-radius: 8rpx;
}

.contentView {
    width: 100vw;
    height: 100vh;
    background-color: black;
    overflow: hidden;
    white-space: nowrap;
}

.content-location {
    background-color: white;
}

.cover-list {
    width: 100%;
    height: 100%;
    overflow: hidden;
    white-space: normal;
}

.hot-lab {
    width: 100%;
    height: 60rpx;
    border-top: 1rpx solid #eaeaea;
    display: flex;
    align-items: center;
    padding-left: 3vw;
}

.label {
    width: 150rpx;
    height: 40rpx;
    margin-right: 2vw;
    font-size: 25rpx;
    font-weight: bold;
    color: #656565;
    border: 1rpx solid #eaeaea;
    border-radius: 8rpx;
    background-color: rgba(248, 248, 248, 0.5);
    /* 文本上下左右居中 */
    text-align: center;
    line-height: 40rpx;
}

.city-content {
    background-color: white;
}

.like-content {
    background-color: white;
}

.find-content {
    background-color: black;
}

.myScrollStyle {
    height: 40vh;
    width: 49vw;
    border: 3rpx solid white;
    border-radius: 20rpx;
}

.myCameraBtn {}

.mask-layer {
    position: fixed;
    z-index: 99;
    width: 4vw;
    height: 100vh;
    bottom: 0;
}