/* pages/user/info/info.wxss */

.page {
    width: 97vw;
    margin-left: 3vw;
}

.page>view {
    border-bottom: 1rpx solid #eaeaea;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 35rpx;
}

.page>view>view {
    display: flex;
    align-items: center;
}

.page>view>view>icon {
    margin: 0 3vw;
    display: flex;
    align-items: center;
}

.avatar-image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}