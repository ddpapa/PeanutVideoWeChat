/* pages/user/index/home.wxss */

@import "../../../style/iconfont.wxss";
.return {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 3vw;
    margin-right: 3vw;
}

.topUserName {
    display: flex;
    font-size: 20px;
    font-weight: bold;
}

.top-mask {
    width: 100%;
    position: fixed;
    z-index: 99;
}

.front-cover {
    position: absolute;
    top: 0rpx;
    z-index: -1;
    width: 100vw;
    height: 50vw;
}

.front-page {
    width: 102vw;
    height: 100vh;
    background-color: transparent;
}

.front {
    height: 80vh;
    margin-top: 20vh;
    width: 100vw;
    background-color: #f8f8f8;
}

.front-msg {
    width: 94%;
    height: 164rpx;
    position: relative;
    margin: auto;
    display: flex;
}

.msg-avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 4rpx solid white;
    margin-top: -24rpx;
}

.front-msg>view {
    display: flex;
    margin-left: 30rpx;
    flex-direction: column;
}

.msg-fan {
    height: 87rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.msg-fan>view {
    width: 120rpx;
}

.msg-fan>view>text:nth-child(1) {
    font-size: 40rpx;
    font-weight: 540;
}

.msg-fan>view>text:nth-child(2) {
    font-size: 30rpx;
}

.msg-btn {
    height: 57rpx;
    width: 260rpx;
    background-color: white;
    border-radius: 57rpx;
    border: 1rpx solid #eaeaea;
    display: flex;
    align-items: center;
    justify-content: center;
}

.msg-btn>view {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    font-weight: 550;
}

.front-info {
    display: flex;
    flex-direction: column;
    width: 94%;
    height: 300rpx;
    margin: auto;
}

.front-info>view:nth-child(1) {
    font-size: 35rpx;
    font-weight: bold;
}

.front-info>view:nth-child(2) {
    font-size: 25rpx;
}

.front-info>view:nth-child(3) {
    font-size: 25rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.front-navbar {
    width: 96vw;
    margin: auto;
    height: 8vh;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: flex-end;
    border-bottom: 1rpx solid #eaeaea;
}

.front-navbar>view>view {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100rpx;
    font-size: 30rpx;
}

.front-navbar>view>view:nth-child(2) {
    font-size: 25rpx;
}

.front-navbar>view>view:nth-child(3) {
    height: 5rpx;
    border-radius: 5rpx;
}

.front-swiper {
    width: 100vw;
    height: 92vh;
    position: relative;
}

.item-repalce {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.item-repalce>image {
    margin-top: 30rpx;
    width: 50%;
}

.myScrollStyle {
    width: 32.6vw;
    border: 1rpx solid white;
    height: 40vw;
}

.mask-layer {
    position: absolute;
    z-index: inherit;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.cameraBtn {
    position: fixed;
    z-index: 99;
    bottom: 30rpx;
    right: 30rpx;
}